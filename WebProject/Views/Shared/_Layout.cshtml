<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - BNAA Productions' web application</title>
	@Styles.Render("~/Content/css")
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/weather.css")" rel="stylesheet" type="text/css" />
	@Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Scripts/getWeather.js" type="text/javascript"></script>
</head>

<body>
    <audio autoplay>
        <source src="~/Content/soundtrack.mp3" type="audio/mpeg">
    </audio>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <a class="navbar-brand" href="~/Home/Index">Shauli's Blog</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="~/Fans/Index">Fan Club</a></li>
                <li><a href="~/Posts/Index">Posts</a></li>
                <li><a href="~/Comments/Index">Comments</a></li>
                <li><a href="~/Home/Graphs">Statistics</a></li>
                <li><a href="~/Home/Maps">Fans on the Map</a></li>
                <li><a href="~/Home/About">About</a></li>
                <li><a href="~/Home/Contact">Contact</a></li>
            </ul>
            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    <li>
                        <div id="transDemo2">
                            <div class="hover">
                                <img src=http://www.ashlylorenzana.com/wp-content/uploads/2013/12/12065637851779660844SRD_RSS_Logo.svg_.hi_.png width="30" height="30">
                            </div>
                        </div>
                    </li>
                    <li class="subscribe">
                        <a href="#">Subscribe via. RSS</a>
                    </li>
                    <li><div id="weather" /></li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>
 
    <!-- Introduction -->
    <section id="intro">
        <header>
            <h2>Do you have questions for me?</h2>
        </header>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut.</p>
        <img src="~/Content/images/intro_shauli.png" alt="Shauli" />
    </section>

    <div id="mainContent">
        @RenderBody()
    </div>

    <aside>
        <section>
            <header>
                <h3>Categories</h3>
            </header>
            <ul>
                <li><a href="#">Lorem ipsum dolor</a></li>
                <li><a href="#">Sit amet consectetur</a></li>
                <li><a href="#">Adipisicing elit sed</a></li>
            </ul>
        </section>
        <section>
            <header>
                <h3>Archives</h3>
            </header>
            <ul>
                <li><a href="#">December 2008</a></li>
                <li><a href="#">January 2009</a></li>
                <li><a href="#">February 2009</a></li>
                <li><a href="#">March 2009</a></li>
            </ul>
        </section>
    </aside>

	<footer>
		<div class="content-wrapper">
            <div class="row">
                <section id="about">
                    <element>
                        <h3>About</h3>
                    </element>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut la</p>
                </section>
                <section id="blogroll">
                    <element>
                        <h3>Blogroll</h3>
                    </element>
                    <ul>
                        <li><a href="#">NETTUTS+</a></li>
                        <li><a href="#">FreelanceSwitch</a></li>
                    </ul>
                </section>
                <section id="popular">
                    <element>
                        <h3>Popular</h3>
                    </element>
                    <ul>
                        <li><a href="#">This is the title of a blog post</a></li>
                        <li><a href="#">Lorem ipsum dolor sit amet</a></li>
                        <li><a href="#">Consectetur adipisicing elit, sed do eiusmod</a></li>
                    </ul>
                </section>
            </div>
            <div class="row">
                <canvas id="myCanvas" width="1000" height="100" style="border:1px solid #d3d3d3;">
                    Your browser does not support the HTML5 canvas tag.
                </canvas>

                <script>
                    var c = document.getElementById("myCanvas");
                    var ctx = c.getContext("2d");
                    ctx.textAlign = "center";
                    var string = "© @DateTime.Now.Year - BNAA Productions";
                    ctx.font = "30px Arial";
                    ctx.fillText(string, 500, 62);
                </script>
            </div>
		</div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
