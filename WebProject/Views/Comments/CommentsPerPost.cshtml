@model IEnumerable<WebProject.Models.CommentsPerPostCount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Comments Per Post</h1>
<table class="table">
    <tr>
        <th>
            Post ID
        </th>
        <th>
            Post
        </th>
        <th>
            Number Of Comments
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PostID)
        </td>
        <td>
            "@Html.DisplayFor(modelItem => item.PostTitle)"
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
    </tr>
}

    <tr>
        <td>
            -
        </td>
        <td>
            All Other Posts
        </td>
        <td>
            0
        </td>
    </tr>

</table>
